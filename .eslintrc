{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended", // Prettier와 연동
  ],
  "rules": {
    // 사용자 정의 규칙 추가
    "@typescript-eslint/no-var-requires": "off",
    "quotes": ["error", "single"], // 문자열은 홑따옴표로
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true, // Prettier 설정과 일치
      },
    ],
  },
}
